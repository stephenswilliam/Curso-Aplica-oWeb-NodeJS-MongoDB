<h1>{{categoria}}</h1>
{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h3>{{titulo}}</h3>
      <p>{{descricao}}</p>
      <a href="/postagem/{{slug}}"><button class="btn btn-success">Ler mais</button></a>
      <hr>
      <small>Data de Publicação: {{data}}</small><br>
    </div>
  </div>     
{{else}}
  <h5 class='mt-3'>Nenhuma postagem cadastrada!</h5>
{{/each}}