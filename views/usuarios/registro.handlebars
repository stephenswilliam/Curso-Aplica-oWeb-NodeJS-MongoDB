{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Crie sua conta:</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="POST">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" value="{{nome}}" class="form-control" required>
            <label for="email">Email: </label>
                <input type="text" name="email" value="{{email}}"" class="form-control" required>
            <label for="senha">Senha: </label>
                <input type="password" name="senha" value="{{senha}}" class="form-control" required>
            <label for="senhaconf">Repita a senha: </label>
                <input type="password" name="senhaconf" value="{{senhaconf}}" class="form-control" required>
            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>