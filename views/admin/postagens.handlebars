<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <p>Conteúdo: {{conteudo}}</p>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data da publiação: {{data}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Postagem</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger mt-3">Excluir Postagem</button></a>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem cadastrada!</h4>
{{/each}}